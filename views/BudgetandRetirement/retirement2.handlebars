<div class="container">
    {{#if retires}}
    <div class="card card-body">
        <h3 class="text-primary">Retirement</h3>
        {{!-- 		{{#each users}} --}}
        {{#each retires}}
        <div class="card border-primary mb-2 w-100 mx-auto">
            <div class="card-header">
                <h5 class="card-title">Monthly Income: {{MonthlyIncome}}</h5>
                <h5 class="card-title">Retirement Age: {{RetirementAge}}</h5>
                <h5 class="card-title">Retirement Goal: {{RetirementGoal}}</h5>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <br>
                    <a href="/retire/editretire/{{id}}">
                        <button class="btn btn-lg btn-success"> <i class="glyphicon glyphicon-ok-sign"></i>Edit
                            Retirement</button>
                    </a>
                    <a href="/retire/delete/{{id}}" class="card-link text-danger icons" data-toggle="confirmation"
                        data-title="Confirm delete?">
                        <i class="far fa-trash-alt"></i>
                        Delete
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
        {{!--             {{/each}} --}}
    </div>
    {{else}}
    <h3>No retirement plan set up, please click <a href="/retire/retirement">here</a> to set one up.</h3>
    {{/if}}
</div>