<link rel="stylesheet" href="/css/ZhiJian.css">

<div id="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h2 class="text-center">Complete your account (Budgeting)</h2>
                <p>Fill up this form to allow us to manage and compare your budget.</p>
                <p>We will keep track of your progress and notify you if you are going off budget.</p>
                <form action="/user/saveeditbudget/{{user.id}}?_method=PUT" method="post">
                    <div class="form-group">
                        <label for="name">Monthly income</label>
                        <input type="text" class="" name="MonthlyIncome" value="{{user.MonthlyIncome}}" required>    
                    </div>
                    <div class="form-group">
                        <label for="name">Plan to save (Monthly)</label>
                        <input type="text" class="" name="MonthlySave" value="{{user.MonthlySave}}" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Monthly living expense</label>
                        <input type="text" class="" name="Living" value="{{user.Living}}" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Monthly food expense</label>
                        <input type="text" class="" name="Food" value="{{user.Food}}" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Hobbies/Others</label>
                        <input type="text" class="" name="Hobbies" value="{{user.Hobbies}}" required>
                    </div>
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date of Birth</label>
						<input id="datepicker" width="200" name="Birthdate" value="{{user.Birthdate}}" readonly required/>
					</div>
                        <button type="submit" class="btn btn-primary">Submit</button> 
                </form>
            </div>
        </div>
    </div>
</div>

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		value: new Date().toLocaleDateString('en-SG'),
		uiLibrary: 'bootstrap4',
	});
	$('input[type=text]').val (function () {
    return this.value.toUpperCase();
	})
</script>