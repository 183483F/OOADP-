<link rel="stylesheet" href="/css/ZhiJian.css">

<div id="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h2 class="text-center">Retirement Plan</h2>
                <form action="../retire/retirement" method="post">
                    <div class="form-group">
                        <label for="name">Monthly income</label>
                        <input type="text" class="" name="MonthlyIncome" value="{{MonthlyIncome}}" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Retirement age</label>
                        <input type="text" class="" name="RetirementAge" value="{{RetirementAge}}" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Goal for retirement</label>
                        <input type="text" class="" name="RetirementGoal" value="{{RetirementGoal}}" required>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date of payment</label>
						<input id="datepicker" width="200" name="dateDue" value="{{dateDue}}" readonly required/>
					</div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>