<div class="container">
	{{#if users}}
	<div class="card card-body">
		<h3 class="text-primary">Budget</h3>
{{!-- 		{{#each users}} --}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-header">
				<h5 class="card-title">Age: {{users.Age}}</h5>
                <h5 class="card-title">Monthly income: {{users.MonthlyIncome}}</h5>
                <h5 class="card-title">Plan to save monthly: {{users.MonthlySave}}</h5>
                <h5 class="card-title">Living expense: {{users.Living}}</h5>
                <h5 class="card-title">Food expense: {{users.Food}}</h5>
                <h5 class="card-title">Hobbies/Others: {{users.Hobbies}}</h5>
		    </div>
        </div>
		<div class="form-group">
                    <div class="col-xs-12">
                        <br>
                        <a href="/user/editbudget/{{users.id}}">
						<button class="btn btn-lg btn-success"> <i class="glyphicon glyphicon-ok-sign"></i>Edit Budget</button>
                        </a>
                    </div>
                </div>
{{!--             {{/each}} --}}
        </div>
	    {{else}}
	    <h3>No budgeting set up</h3>
	{{/if}}
</div>