<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.js"></script>

<style>
	.rate {
		float: left;
		height: 46px;
		padding: 0 10px;
	}

	.rate:not(:checked)>input {
		position: absolute;
		top: -9999px;
	}

	.rate:not(:checked)>label {
		float: right;
		width: 1em;
		overflow: hidden;
		white-space: nowrap;
		cursor: pointer;
		font-size: 30px;
		color: #ccc;
	}

	.rate:not(:checked)>label:before {
		content: 'â˜… ';
	}

	.rate>input:checked~label {
		color: #ffc700;
	}

	.rate:not(:checked)>label:hover,
	.rate:not(:checked)>label:hover~label {
		color: #deb217;
	}

	.rate>input:checked+label:hover,
	.rate>input:checked+label:hover~label,
	.rate>input:checked~label:hover,
	.rate>input:checked~label:hover~label,
	.rate>label:hover~input:checked~label {
		color: #c59b08;
	}
</style>

<div class="container">
	<div class="card card-body" style="background-color:#ebeae4;">

		<h3>Feedback Form</h3>
		<p>( Please tell us what do you think. Any kind of feedback is highly appreciated. )</p>
		<br>

		<form action="../feedback/Addfeedback" method="post" id="Addfeedback">{{!-- path --}}
			<div class="form-group">
				<label class="font-italic" for="Title">Title:</label>
				<textarea class="form-control" id="Title" name="Title" rows="1" placeholder="Title" maxlength="300"
					required>{{Title}}</textarea>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="Textfeed">Comments:</label>
				<textarea class="form-control" id="Textfeed" name="Textfeed" rows="6" placeholder="Your feedback"
					maxlength="2000" required>{{Textfeed}}</textarea>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="Suggestion">How can we improve our service? Suggestion?</label>
				<textarea class="form-control" id="Suggestion" name="Suggestion" rows="6" placeholder="Sugeestion"
					maxlength="2000" required>{{Suggestion}}</textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date: </label>
						<input id="datepicker" width="200" name="Date" value="{{Date}}" readonly required />
					</div>


					<div class="col-sm-12 col-md-5 col-lg-5">

						<label class="font-italic">Ratings out of 5</label>
						<br>
						{{!-- 		<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" id="myChart" value="0" name="Rating" required>
					<label class="form-check-label" for="0">0</label>
				</div> --}}
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="myChart" value="1" name="Rating" required>
							<label class="form-check-label" for="1">1</label>
						</div>

						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="myChart" value="2" name="Rating" required>
							<label class="form-check-label" for="2">2</label>
						</div>

						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="myChart" value="3" name="Rating" required>
							<label class="form-check-label" for="3">3</label>
						</div>

						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="myChart" value="4" name="Rating" required>
							<label class="form-check-label" for="4">4</label>
						</div>

						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="myChart" value="5" name="Rating" required>
							<label class="form-check-label" for="5">5</label>
						</div>

					</div>
				</div>
			</div>

			<br>
			<button id="Submit" type="submit" class="btn btn-primary"> Submit Feedback </button>

		</form>
	</div>
</div>

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
