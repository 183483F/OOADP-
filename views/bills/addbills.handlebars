<div class="container">
	<div class="card card-body">
		<h3>Add Bills</h3>
		<form action="../bills/addbills" method="post" id="addbills">
			<div class="form-group">
				<label class="font-italic" for="bill">Bill Name</label>
				<textarea class="form-control" id="title" name="title" rows="1" required>{{title}}</textarea>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="bill">Cost</label>
				<input type="number" class="form-control" id="billCost" name="billCost" rows="7" required>{{billCost}}</textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date of payment</label>
						<input id="datepicker" width="200" name="dateDue" value="{{dateDue}}" readonly required/>
					</div>
				</div>
			</div>
			<br>
			<button id="butaddBills" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		value: new Date().toLocaleDateString('en-SG'),
		uiLibrary: 'bootstrap4',
	});
</script>