<div class="container">
    <div class="card card-body">
        <h3>Add Bills</h3>
        <form action="../video/addbills" method="post" id="addbills">
            <div class="form-group">
				<label class="font-italic" for="billName">Title</label>
				<textarea class="form-control" id="title" name="title" rows="1">{{title}}</textarea>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="story">Story</label>
				<textarea class="form-control" id="story" name="story" rows="7">{{billName}}</textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date of release</label>
						<input id="datepicker" width="200" name="dateRelease" value="{{dateRelease}}" readonly />
					</div>
				</div>
			</div>
            <br>
			<button id="butaddBills" type="submit" class="btn btn-primary">Save
			</button>
        </form>
    </div>
</div>

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		value: new Date().toLocaleDateString('en-SG'),
		uiLibrary: 'bootstrap4',
	});
</script>