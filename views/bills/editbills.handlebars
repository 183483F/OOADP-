
<div class="container">
	<div class="card card-body">
		<h3>Edit Bill Info - {{bills.title}}</h3>
		<form action="/bills/saveEditedBills/{{bills.id}}?_method=PUT" method="post">
			<div class="form-group">
				{{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
				<label class="font-italic" for="story">Title</label>
				<textarea class="form-control" id="title" name="title" rows="1">{{bills.title}}</textarea>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="billCost">Bill Cost</label>
				<input type="number" class="form-control" id="billCost" name="billCost" rows="7">{{bills.billCost}}</textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date of Payment</label>
						<input id="datepicker" width="200" name="dateDue"
							value="{{formatDate bills.dateDue 'DD MMM'}}" readonly />
					</div>
					</div>
			</div>
			<br>
			<button id="butAddBills" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		value: new Date().toLocaleDateString('en-SG'),
		uiLibrary: 'bootstrap4',
	});
</script>